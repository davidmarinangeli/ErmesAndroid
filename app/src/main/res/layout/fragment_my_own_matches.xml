<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/own_matches_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.david.ermes.View.activities.MyMatchesActivity">

    <TextView
        android:id="@+id/own_no_matches_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginVertical="16dp"
        android:text="Nessuna partita" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/own_matches_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>